<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="zhou.yi.domain.Homework" table="homework">
		<id name="hid" column="hid">
			<generator class="native"/>
		</id>
		<property name="course_id" column="course_id" length="12"></property>
		<property name="title" column="title" length="100"></property>
		<property name="content" column="content" ></property>
		<property name="create_time" column="create_time" type="timestamp"></property>

	</class>
</hibernate-mapping>